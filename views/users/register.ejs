<% layout('layouts/boilerplate')%>
<h1>Register</h1>
<form action="/register" class="validate1" novalidate method="POST">
  <div class="mb-3">
    <label class="form-labels" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Looks sweet!</div>
  </div>
  <div class="mb-3">
    <label class="form-labels" for="email">Email</label>
    <input class="form-control" type="email" id="email" name="email" required />
    <div class="valid-feedback">Looks sweet!</div>
  </div>
  <div class="mb-3">
    <label class="form-labels" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">Looks sweet!</div>
  </div>
  <button class="btn btn-success">Register</button>
</form>

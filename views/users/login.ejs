<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mb-3 pb-5 ">
  <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <div class="card shadow">
            <img src="https://source.unsplash.com/random/300x250?camping" alt="" class="card-img-top" crossorigin=>
         <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" class="validate1" novalidate method="POST">
            <div class="mb-3">
              <label class="form-labels" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks sweet!</div>
            </div>
            <div class="mb-3">
              <label class="form-labels" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks sweet!</div>
            </div>
            <button class="btn btn-success btn-block">Login</button>
          </form>
         </div>
          </div>
      </div>
  </div>
</div>